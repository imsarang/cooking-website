{
  "compilerOptions": {
    "jsx": "react-jsx", // Use "react-jsx" for React 17+ or "react" for older versions
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["frontend/src/*"]
    },
    "types": ["react", "node"] // Ensure React types are included
  },
  "include": ["frontend/**/*"],
  "exclude": ["node_modules"]
}
